img {
	width: 100%;
}

body {
	background-color: #fff;
}

header {
	position: relative;
	line-height: 50px;
}
.header-left {
	background: url(../images/xw_header_icon_phone.png) no-repeat;
	text-indent: 20px;
	background-position: 0 16px;
}

.header-left span {
	color: #404040;
}

.header-img{
	width: 30px;
    height: 30px;
    margin-top: 11px;
    border-radius: 50%;
    overflow: hidden;
}

.header-logo {
	position: absolute;
	top: 50px;
	left: 50%;
	margin-left: -156px;
	width: 332px;
	height: 130px;
	background: url(../images/xw_header_bg_logo.png) no-repeat;
	z-index: 999;
	text-align: center;
}

.header-logo img {
	width: 150px;
	margin-top: -10px;
	height: 120px;
}
.header-right a{
	color: #474747;
}
/*导航*/
.index-nav{
	width: 100%;
	height: 65px;
    border-bottom: 4px solid #ef6002;
    text-align: center;
}
.index-nav>ul>li{
	margin: 0;
	padding: 20px 40px !important;
	line-height: inherit;
}
.index-nav li:nth-child(2){
	position: relative;
	background: url(../images/xw_nav_icon_open_default.png) no-repeat 110px center;
}
.index-nav li:nth-child(2):hover{
	background: url(../images/xw_nav_icon_open_pressed.png) no-repeat 110px center;
}
.index-nav li ul {
    left: 27px;
}
.index-nav .active{
	color: #fff;
	background-color: #ef6002;
}
.index-nav .active i {
	display: inline-block;
	margin-top: 0;
	margin-right: 10px; 
	width: 20px; 
	height: 20px;
}
.index-nav .indexIcon-01 {
	background: url(../images/xw_nav_icon_home.png) no-repeat;
}

.index-banner .swiper-container {
	height: 855px;
}
.index-banner img{
	width: 100%;
	height: 100%;
}
.index-banner .swiper-pagination-bullet {
	width: 14px;
	height: 14px;
	border: 3px solid #433f3f;
	background: transparent;
	opacity: 1;
}

.index-banner .swiper-pagination-bullet-active {
	border: 3px solid #cd000f;
	background: transparent;
}

.category,
.game,
.tour,
.information {
	color: #010101;
	text-align: center;
}

.maintitle {
	font-size: 40px;
}

.subtitle {
	font-size: 24px;
}

.game .more {
	margin-top: 46px;
	color: #ef6002;
	border: 2px solid #ef6002;
}

.category {
	padding: 130px 0 160px;
}

.category .subtitle {
	margin-bottom: 76px;
}


.category a {
	float: left;
	width: 200px;
	margin: 0 50px;
}

.category div {
	display: inline-block;
	min-width: 1200px;
	margin: 0 auto;
}

.category1 {
	background: url(../images/xw_home_icon_main_default.png) no-repeat center top;
}

.category1:hover {
	background: url(../images/xw_home_icon_main_pressed.png) no-repeat center top;
}

.category2 {
	background: url(../images/xw_home_icon_theatre_default.png) no-repeat center top;
}

.category2:hover {
	background: url(../images/xw_home_icon_theatre_pressed.png) no-repeat center top;
}

.category3 {
	background: url(../images/xw_home_icon_song_default.png) no-repeat center top;
}

.category3:hover {
	background: url(../images/xw_home_icon_song_pressed.png) no-repeat center top;
}

.category4 {
	background: url(../images/xw_home_icon_international_default.png) no-repeat center top;
}

.category4:hover {
	background: url(../images/xw_home_icon_international_pressed.png) no-repeat center top;
}

.category span {
	display: block;
	margin: 200px 0 14px;
	font-size: 18px;
	color: #222;
}

.category a p {
	position: relative;
	line-height: 1.4em;
	height: 4.2em;
	overflow: hidden;
	color: #535353;
	font-size: 12px;
	text-align: left;
}

.category a p:after {
	content: "...";
	position: absolute;
	bottom: 0;
	right: 0;
	padding: 0 20px 1px 45px;
	background: url(../images/ellipsis_bg.png) repeat-y;
}

.game {
	padding: 80px 0 38px;
	color: #fff;
	border-bottom: 10px solid #ef6002;
	background: url(../images/xw_home_bg_game.png) no-repeat;
	background-size: cover;
}

.videotitle {
	width: 700px;
	margin: 0 auto;
	margin-top: 34px;
	font-size: 17px;
	line-height: 50px;
	background: url(../images/xw_home_image_game_line.png) no-repeat;
}

.video-wrapper,
.tour-wrapper {
	position: relative;
	width: 1000px;
	margin: 0 auto;
}

.game .swiper-container {
	height: 540px;
}

.game .btn {
	position: absolute;
	z-index: 999;
}

.btn-left,
.btn-right {
	top: 50%;
	margin-top: -50px;
	width: 50px;
	height: 100px;
}

.game .btn-left {
	left: -10px;
	background-image: url(../images/xw_home_icon_game_left_pressed.png);
}

.game .btn-right {
	right: -10px;
	background-image: url(../images/xw_home_icon_game_right_pressed.png);
}

.game .btn-left.disabled {
	cursor: not-allowed;
	background-image: url(../images/xw_home_icon_game_left_default.png);
}

.game .btn-right.disabled {
	cursor: not-allowed;
	background-image: url(../images/xw_home_icon_game_right_default.png);
}

.btn-pause {
	top: 50%;
	left: 50%;
	margin-top: -50px;
	margin-left: -57px;
	width: 114px;
	height: 114px;
	background-image: url(../images/xw_home_icon_game_play.png);
}

.tour {
	padding: 100px 0 38px;
	background: #f5f4f4;
}

.tour-img {
	margin: 58px auto 87px;
	width: 830px;
	height: 295px;
}

.tour-img img {
	text-align: center;
}

.tour-wrapper {
	position: relative;
}

.tour .swiper-container {
	width: 856px;
}

.tour .swiper-container p {
	width: 80%;
	margin: 0 auto;
	margin-top: 16px;
	color: #222;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

.tour .swiper-slide img{
	width: 280px;
	height: 220px;
}
.tour .swiper-slide img:hover{ opacity: 0.7; filter: alpha(opacity=70);}

.tour-wrapper .btn-left,
.tour-wrapper .btn-right {
	position: absolute;
	width: 42px;
	height: 42px;
	top: 50%;
	margin-top: -39px;
}

.tour .btn-left {
	left: 0;
	background-image: url(../images/xw_home_icon_study_left_pressed.png);
}

.tour .btn-right {
	right: 0;
	background-image: url(../images/xw_home_icon_study_right_pressed.png);
}

.tour .btn-left.disabled {
	cursor: not-allowed;
	background-image: url(../images/xw_home_icon_study_left_default.png);
}

.tour .btn-right.disabled {
	cursor: not-allowed;
	background-image: url(../images/xw_home_icon_study_right_default.png);
}

.tour .more {
	margin-top: 60px;
}

.information {
	padding: 100px 0 38px;
}

.information ul {
	padding: 50px 0 40px;
}

.information li {
	display: inline-block;
	line-height: 78px;
	margin-bottom: 30px;
	background: #e5e3e1;
}
.information li:hover i{
	width: 800px;
	transition: all 1s cubic-bezier(0.875, 1.645, 0.485, 0.575);
}
.information li:hover .info{
	color: #fff;
}
.information li>span {
	display: inline-block;
}

.information li>i {
	position: absolute;
	width: 78px;
	height: 78px;
	background: #161616;
}

.information li>i:after {
	content: "";
	position: absolute;
	top: 50%;
	margin-top: -8px;
	right: -8px;
	width: 0;
	height: 0;
	border-top: 8px solid transparent;
	border-bottom: 8px solid transparent;
	border-left: 8px solid #161616;
}

.information .info {
	position: relative;
	width: 800px;
	color: #222;
	text-align: left;
}
.information .num{
	width: 78px;
	color: #f3f3f3;
	font-size: 32px;
	margin-right: 30px;
	text-align: center;
}

.information .date {
	width: 200px;
	color: #717171;
	background: #f3f1f0;
}

.information li.even>i {
	background: #ef6002;
}

.information li.even>i:after {
	border-left: 8px solid #ef6002;
}

/*按钮*/
.btn{
	display: inline-block;
	background-repeat: no-repeat;
	background-size: 100%;
	cursor: pointer;
}
.more{
	width: 100px;
	height: 34px;
	line-height: 30px;
	border-radius: 4px;
	background: transparent;
	color: #3d3d3d;
	border: 2px solid #3d3d3d;
}
.more:hover{
	color: #76360b;
	border: 2px solid #76360b;
}


a{
	display: inline-block;
}
