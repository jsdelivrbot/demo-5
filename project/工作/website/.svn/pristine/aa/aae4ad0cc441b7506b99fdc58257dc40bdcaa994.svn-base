.bg-pale{
	background: #000;
}
.skin-container {
	position: absolute;
	top: 0;
	left: 0;
	height: 1500px;
	width: 100%;
	min-width: 1000px;
	z-index: -10;
	background-position: center 0;
	background-repeat: no-repeat;
	background-size: cover;
	-webkit-background-size: cover;
	-o-background-size: cover;
	zoom: 1;
}
.breadcrumb {
    margin-bottom: 28px;
}
.breadcrumb,
.breadcrumb li a {
	color: #fff;
}

.crumbIcon {
	background: url(../images/xw_nav_icon_next.png);
}

.tour-details-title {
	text-align: center;
}

.tour-details-title h1 {
	margin-bottom: 20px;
	font-size: 22px;
	color: #fff;
}

.tour-details-title p {
	text-indent: 30px;
}

.tour-details-title span {
	margin-right: 30px;
	font-size: 20px;
	color: #ef6002;
}

.tour-details-img {
	position: relative;
	margin: 36px 0 50px;
}

.tour-details-img a {
	position: absolute;
	bottom: 30px;
	left: 50%;
	margin-left: -105px;
	display: inline-block;
	width: 210px;
	height: 68px;
	line-height: 64px;
	text-align: center;
	font-size: 30px;
	background: #fe3021;
	z-index: 10;
}


/*轮播图*/

.poster-main {
	margin: 0 auto;
	position: relative;
}

.poster-main .poster-list .poster-item {
	position: absolute;
}
.poster-main .poster-btn {
	position: absolute;
	height: 420px!important;
	width: 100px;
	top: 40px;
	z-index: 10;
	cursor: pointer;
}
img:hover{
	transform: scale(1);
	opacity: 1;
}
.poster-main .poster-prev-btn {
	left: 0px;
	background: rgba(255,255,255,.2) url(../images/xw_startour_icon_left.png) no-repeat center center;
}

.poster-main .poster-next-btn {
	right: 0px;
	background: rgba(255,255,255,.2) url(../images/xw_startour_icon_right.png) no-repeat center center;
}

.tour-details-info {
	margin-bottom: 60px;
	text-align: center;
}

.tour-details-info div {
	display: inline-block;
    vertical-align: top;
	padding: 14px 8px;
	margin-right: 24px;
	width: 140px;
	height: 70px;
}
.group_active{
	cursor: pointer;
}
.tour-details-info span {
	display: block;
	line-height: 22px;
}

.tour-details-info div:nth-child(1) {
	width: 160px;
	height: 90px;
	border-right: 1px solid rgba(255, 255, 255, .3);
}

.tour-details-info div:nth-child(1) span {
	line-height: 32px;
}

.tour-details-info div:nth-child(3),
.tour-details-info div:nth-child(4),
.tour-details-info div:nth-child(5) {
	margin-top: 10px;
	background: rgba(255, 255, 255, .2);
}

.tour-details-info div:nth-child(2) {
	margin-top: 10px;
	background: rgba(255, 255, 255, .5);
}

.tour-details-info div span:nth-child(2) {
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.tour-details-introduction>section {
	position: relative;
	margin-bottom: 36px;
	padding: 48px 40px 36px;
	background: #fff;
	color: #333;
	line-height: 28px;
}
section:last-child .title-leve1{
	cursor: pointer;
}
.title-leve1,
.title-leve2 {
	color: #fff;
}

.title-wrapper {
	position: absolute;
	left: -20px;
	top: -20px;
}

.title-leve1 {
	float: left;
	padding: 10px 24px;
	background: #444240;
	font-size: 18px;
}

.title-leve1:nth-child(1) {
	position: relative;
	top: 6px;
}

.title-leve1:nth-child(2) {
	position: relative;
	top: 6px;
	background: #3d3b39;
}

.title-leve1:nth-child(3) {
	position: relative;
	top: 6px;
	background: #444240;
}

.title-leve1.active {
	top: 0;
	background: #ef6002;
	transition: top .4s;
}

.title-leve2 {
	display: inline-block;
	position: relative;
	left: -11px;
	padding: 0 30px 0 18px;
	line-height: 33px;
	background: url(../images/xw_startour_icon_bg.png) no-repeat;
	background-size: 100% 100%;
}

.tour-details-introduction>section:nth-child(3) {
	padding: 48px 0 25px;
	padding-left: 0;
}
.tour-details-introduction>section:nth-child(3) ul{
	padding-right: 50px;
}
.tour-details-list li {
	margin-bottom: 30px;
	border-bottom: 1px solid #e6e5e5;
	padding-bottom: 20px;
}

.tour-details-introduction li div {
	padding-left: 30px;
}

.tour-details-list li:last-child {
	border-bottom: none;
	margin-bottom: 20px;
}

.tip {
	color: #ef6002;
	text-align: center;
	line-height: 26px;
}

.title-trip,
.title-sleep {
	display: block;
	margin-left: -44px;
	text-indent: 44px;
	font-weight: 600;
}

.title-trip {
	margin-top: 20px;
	background: url(../images/xw_startour_icon_trip.png) no-repeat;
}

.title-sleep {
	margin-top: 14px;
	background: url(../images/xw_startour_icon_sleep.png) no-repeat;
}

.tour-details-introduction>section img {
	width: 460px;
	height: 306px;
	margin-top: 14px;
	margin-right: 18px;
}

.tab-wrapper ul {
	display: none;
}

.tab-wrapper ul:first-child {
	display: block;
}

.recommended {
	height: 450px;
	background: url(../images/xw_startour_bg.png) no-repeat;
	background-size: 100% 100%;
}

.recommended-wrapper h2 {
	font-size: 18px;
	color: #ef6002;
	line-height: 70px;
}

.travel-box ul li {
	height: 340px;
	background: #fff;
}

.travel-box .priceRemark {
	margin-top: 15px;
	background: #f9f8f8;
}

.travel-box ul li .priceRemark span {
	margin: 9px 0;
}