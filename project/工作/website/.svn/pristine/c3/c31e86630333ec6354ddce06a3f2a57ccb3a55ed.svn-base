.skin-container {
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    min-width: 1000px;
    z-index: -10;
    background-image:url(../images/xw_login_bg.png);
    background-position: center 0;
    background-repeat: no-repeat;
    background-size: cover;
    -webkit-background-size: cover;
    -o-background-size: cover;
    zoom: 1;
}
header{
	position: fixed;
	top: 0;
}
nav{
	position: fixed;
	top: 30px;
}
.login-box-bg{
	position: absolute;
    top: 50%;
    left: 50%;
	width: 370px;
	height: 480px;
	background: #EF6002;
    transform: translateX(-50%) translateY(-50%);
    -webkit-transform: translateX(-50%) translateY(-50%);
    -moz-transform: translateX(-50%) translateY(-50%);
    -ms-transform: translateX(-50%) translateY(-50%);
}
.login-box{
	position: absolute;
    top: 50%;
    left: 33%;
    padding: 50px 55px 40px;
	width: 360px;
	height: 400px;
	background: #fff;
	transform: translateX(-50%) translateY(-50%);
    -webkit-transform: translateX(-50%) translateY(-50%);
    -moz-transform: translateX(-50%) translateY(-50%);
    -ms-transform: translateX(-50%) translateY(-50%);
}
.login-box h2{
	margin-bottom: 10px;
	font-size: 20px;
	color: #222222;
	text-align: center;
}
.login-box ul{
	margin: 0 auto;
	width: 220px;
}
.login-box ul li{
	position: relative;
	margin-top: 50px;
	border-bottom: 1px solid #dad9d9;
}
.login-box ul li input{
	padding: 0;
	height: 30px;
	line-height: 30px;
	background: none;
	border: none;
	color: #222222;
}
.login-box ul li input.btn-code{
	right: 10px;
	margin-right: 10px;
    line-height: 30px;
    color: #ef6002;
    cursor: pointer;
    outline: none;
}
.login-box>ul>li>input::-webkit-input-placeholder { /* WebKit browsers */
	font-size: 14px;
    line-height: 30px;
    color:#999999;
}
.login-box>ul>li>input:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
	font-size: 14px;
	line-height: 30px;
    color:#999999;
}
.login-box>ul>li>input::-moz-placeholder { /* Mozilla Firefox 19+ */
	font-size: 14px;
    line-height: 30px;
    color:#999999;
}
.login-box>ul>li>input:-ms-input-placeholder { /* Internet Explorer 10+ */
	font-size: 14px;
	line-height: 30px;
	color:#999999;
}
.error-tip{
	margin-top: 7px;
	margin-left: 15px;
	font-size: 12px;
	color: #fe1d1d;
}
/*登录按钮*/
.btn-box{
	position: absolute;
	bottom: 40px;
	width: 244px;
	height: 76px;
	background: url(../images/xw_login_btn_signin_default.png) no-repeat center;
    background-size: 100% 100%;
}
.btn-box .btn-submit{
	display: block;
	padding: 0;
    width: 100%;
    height: 47px;
    line-height: 47px;
    background: none;
    border: 0;
    font-size: 16px;
    font-weight: bold;
    color: #fff;
    cursor: pointer;
    outline: none;
}
.btn-box .btnRegister{
	display: block;
	margin-top: 10px;
	text-align: center;
	color: #222222;
	text-decoration: underline;
}
.common-footer{
	position: fixed;
	bottom: 0;
}
