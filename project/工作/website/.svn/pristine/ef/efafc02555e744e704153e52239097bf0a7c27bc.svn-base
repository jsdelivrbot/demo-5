body{
	background: #f3f3f3;
}
.tip{
	padding: 20px;
	margin-bottom: 14px;
	background: #fff;
	color: #222;
	line-height: 20px;
}
.tip h2{
	font-size: 16px;
	color: #ef6002;
	margin-bottom: 15px;
}
.tip span{
	color: #fd3030;
	font-weight: 600;
	margin-left: 4px;
}

.signUp-wrapper{
	padding: 30px 0 50px;
	margin-bottom: 50px;
	background: #fff;
	color: #222;
	text-align: center;
}
.title{
	font-size: 22px;
}

.info{
	width: 530px;
	height: 490px;
	border-right: 1px solid #e7e7e7;
}
.info div:nth-of-type(4),.info div:nth-of-type(5){
	margin-bottom: 20px;
	
}
.info .title{
	margin-bottom: 52px;
}
.info label{
	margin-right: 8px;
}
input,select{
	padding: 0 4px;
	width: 250px;
	height: 28px;
	border: 1px solid #e3e3e3;
	background: #fefdfd;
}
input:focus,select:focus{ 
	border: 1px solid #ef6002;
}
select {
	margin-left: -4px;
  	appearance:none;
  	-moz-appearance:none;
  	-webkit-appearance:none;
  	background: url(../images/select-bg.png) no-repeat 234px center;
  	padding-right: 14px;
}
/*清除ie的默认选择框样式清除，隐藏下拉箭头*/
select::-ms-expand { display: none; }
option{
	font-size: 14px;
}
.route{
	width: 570px;
	height: 490px;
	padding: 0 54px;
}
.route .title{
	margin-bottom: 40px;
}
.route img{
	width: 460px;
	height: 255px;
}
.route p{
	color: #333;
	text-align: left;
}
.route p:nth-of-type(1){
	font-size: 18px;
	color: #222;
	line-height: 24px;
	margin: 14px 0 18px;
}
.route span{
	display: inline-block;
	width: 70px;
	margin-right: 4px;
	text-align: right;
}
#submit{
	display: block;
	margin: 0 auto;
	margin-top: 60px;
	width: 260px;
	height: 40px;
	background: #373533;
	color: #fff;
	font-size: 16px;
	font-weight: 600;
	border: none;
}
#submit.available{
	background: #ef6002;
	cursor: pointer;
}
i{
	font-style: normal;
	color: #ef6002;
	font-size: 20px;
}
.error{
	display: block;
	height: 20px;
	line-height: 20px;
    font-size: 12px;
    color: #fe1d1d;
    padding-left: 178px;
    text-align: left;
}

.success{
	display: none;
	position: fixed;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	width: 600px;
	height: 80px;
	line-height: 80px;
	background: rgba(0,0,0,.7);
	font-size: 18px;
	text-align: center;
	border-radius: 4px;
}
