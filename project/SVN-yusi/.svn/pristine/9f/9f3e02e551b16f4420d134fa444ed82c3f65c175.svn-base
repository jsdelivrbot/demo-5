//近7天的水位,流量折线图
//
var myChart;
var echartData = {
    color:['#FF5581','#2DC0E9'],
    grid: {
        bottom: 80
    },

    tooltip: { //提示框，鼠标悬浮交互时的信息提示
        trigger: 'axis'
    },
    legend: { //图例组件
        data: [
            {name: '水位',icon: 'stack'},
            {name: '流量',icon: 'stack'}
        ],
        show:true,
        orient:'horizontal',
        right:70,
        y:'top',
    },
    dataZoom: [ //数据区域缩放，仅对直角坐标系适用
        {
         show: true,
         realtime: true, //缩放变化是否实时显示
         start: 0,
         end: 100
        },
        {
         type: 'inside',
         realtime: true,
         start: 0,
         end: 100
        }
    ],
    xAxis: [ //直角坐标系 grid 中的 x 轴
        {
         type: 'category', //类目型
         boundaryGap: false, //两端空白
         data: []
        }
    ],
    yAxis: [{
        name: "水位/m",
        type: 'value',
        axisLabel: {
            formatter: '{value}'
        }
    },{
        name: '流量(m^3/s)',
        nameLocation: 'end',
        type: 'value',
        inverse: false,
        axisLabel: {
            formatter: '{value}'
        }
    }],
    series: [ //系列列表
    {
        name: '水位',
        type: 'line',
        animation: false,
        lineStyle: {
            normal: {
                width: 1
            }
        },
        data: [[],[]]
    },{
        name: '流量',
        type: 'line',
        yAxisIndex: 1,
        animation: false,
        lineStyle: {
            normal: {
                width: 1
            }
        },
        data: [[],[]]
    }]
};

function lienChart(echartData) {
    myChart = echarts.init(document.getElementById("echartContent"));
    myChart.setOption(echartData);
    console.log(echartData);
}


