* {
  margin: 0;
  padding: 0;
  font-family: "microsoft yahei";
}
ul{
  list-style: none;
}
body{
  background-color: #f5f5f5;
}
#header {
  width: 100%;
}
#header .header-top{
  background-color: #4791ea;
}
#header .header-top-content,#header .header-bottom>ul{
  max-width: 1211px;
  min-width: 1200px;
  margin: 0 auto;
}
#header .header-top-content::after{
  content: "";
  display: block;
  clear: both;
}
#header .header-top-content-left{
  float: left;
}
#header .header-top-content-right{
  float: right;
}
#header .header-top-content-left,#header .header-top-content-right{
  height: 71px;
  line-height: 71px;
  vertical-align: middle;
  color: white;
}
.header-top-content-right a{
  color:#fff;
}
#header .header-top-content-left>i{
  display: inline-block;
  width: 40px;
  height: 40px;
  color:red;
}
#header .header-bottom{
  width: 100%;
  background-color: white;
}
#header .header-bottom>ul{
  font-size: 0;
  width: 100%;
}
#header .header-bottom>ul>li{
  display: inline-block;
  font-size: 18px;
  line-height: 64px;
  height: 64px;
  width: 185px;
  text-align: center;
}
