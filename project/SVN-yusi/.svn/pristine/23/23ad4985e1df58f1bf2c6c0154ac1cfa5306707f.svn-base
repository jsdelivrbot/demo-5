.container-top {
    background: #fff;
    margin-top: 10px;
    padding-top: 32px;
    box-shadow: 1px 10px 15px #E5EFFB;
	text-align: center;
}

.container-top p {
    margin-bottom: 50px;
}

.container-top .title {
    margin-left: 28px;
}
.wrap-title-third {
    display:inline-block;
}
.prevButton, .nextButton {
    display: inline-block;
    width: 8px;
    height: 10px;
    background: url(../imgs/common/common.png) no-repeat;
    cursor: pointer;
}
.prevButton {
    background-position: -80px -141px;
}
.nextButton {
    background-position: -95px -141px;
}
.timePicker {
    width: 121px;
    height: 38px;
    text-align: center;
    text-indent: 5px;
    font-size:16px;
    font-weight:bold;
    color:#4991EA;
    border:none;
    outline: none;
    cursor: pointer;
}

.container-top .circle {
    display: inline-block;
    width: 12px;
    height: 12px;
    line-height: 12px;
    text-align: center;
    border-radius: 50%;
    margin-right: 8px;
    vertical-align: middle;
}

.container-top .circle.red {
    background: #E7211E;
}

.container-top .circle.green {
    background: #01CF60;
}

.container-top .circle.yellow {
    background: #FFDE01;
}

.container-top .circle.gray {
    background: #A4A4A4;
}

.top-right-last {
    margin-right: 42px;
}

.container-top button {
    width: 90px;
    height: 32px;
    line-height: 32px;
    text-align: center;
    color: #fff;
    background-color: #4991EA;
    border-radius: 3px;
    border: none;
    font-size: 14px;
    margin-left: 28px;
}

.left, .right {
    display: inline-block;
    width: 51px;
    vertical-align: middle;
}

.left span, .right span {
    display: inline-block;
    width: 44px;
    height: 44px;
    cursor: pointer;
    border-radius: 50%;
    background: url('../imgs/common/common.png') no-repeat;
}

.left span.leftBtn {
    background-position: -171px -56px;
}

.left span.leftBtn.disabled {
    background-position: -171px -107px;
}

.right span.rightBtn {
    background-position: -233px -56px;
}

.right span.rightBtn.disabled {
    background-position: -233px -107px;
}

.sliderBar {
    display: inline-block;
    vertical-align: middle;
    width: calc(100% - 102px);
	max-width: 1600px;
	height: 100px;
	overflow: hidden;
	padding: 0 5px;
}
.sliderBar ul{
	text-align: center;
}

.sliderBar li {
	font-size: 0;
    position: relative;
    display: inline-block;
    width: 4%;
    text-align: center;
    cursor: pointer;
	padding: 28px 5px 14px;
}

.sliderBar li.active {
    background: #4791ea;
    cursor: pointer;
    color: #fff;
}

.sliderBar li .dateDay{
	font-size: 14px;
	width: 100%;
    height: 0;
	border-radius: 50%;
    padding-bottom: 100%;
    background: #00cf63;
    position: relative;
}

.sliderBar li.active .dateDay{
    background-color: #fff;
}
.sliderBar li>div:last-child{
	color: #516878;
	font-size: 14px;
}
.sliderBar li>div.weekend{
	color: #8f9ca5;
}

.sliderBar li span {
	width: 20px;
    height: 20px;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -10px;
    margin-left: -10px;
	color: white;
}

.sliderBar li.active span {
    color: #4791ea;
}
