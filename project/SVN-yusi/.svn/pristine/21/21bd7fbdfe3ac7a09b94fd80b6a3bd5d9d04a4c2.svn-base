package mybatisPro.mybatisService.impl;

import java.util.List;
import java.util.Map;
import mybatisPro.mybatisEntity.StationEntity;

/**
 * 测站信息业务层接口
 * @author si.yu
 * @date 2017/7/14
 * @version 1.0
 * */
public interface StationService {

	/**
	 * 创建测站信息
	 * @param stationEntity
	 * @return
	 * */
	public boolean createStation(StationEntity stationEntity);
	
	/**
	 * 查询测站列表
	 * @return
	 * */
	public List<Map<String, Object>> getStationList();
	
	/**
	 * 根据测站ID查询测站详细信息
	 * @param stationId
	 * @return
	 * */
	public StationEntity getStationInfoById(Long stationId);
	
	/**
	 * 修改测站信息
	 * @param stationEntity
	 * @return boolean
	 * */
	public boolean updateStationInfo(StationEntity stationEntity);
	
	/**
	 * 根据测站名称查询测站信息
	 * @param sta_name
	 * @return stationEntity
	 * */
	public boolean findStationInfoByStaName(String sta_name);
	
	/**
	 * 查询所有雨量测站的列表信息
	 * @param begin_time
	 * @param end_time
	 * @param type_id
	 * @return
	 * */
	public List<Map<String, Object>> getRainfallStationList(String begin_time
			,String end_time,Long type_id);
	
	/**
	 * 根据测站类型查询测站ID
	 * @param type_id
	 * @return
	 * */
	public List<Long> getStationIdByTypeId(Long type_id);
}
