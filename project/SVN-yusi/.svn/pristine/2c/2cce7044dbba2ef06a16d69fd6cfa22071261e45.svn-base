$(function(){
	//左侧菜单切换
	$("#left li").on('click',function(){
		$(this).addClass('active').siblings().removeClass('active');
	});

	//右侧头部按钮切换
	$(".btn-tabs button").on('click',function(){
		$(this).addClass('active').siblings().removeClass('active');
	});

	var dropDownIdx=0;
	var dropDonMenuLength=$(".dropDonMenu").children("li").length;
	$(".selectView span").on('click',function(){
		$(".dropDonMenu").show();
	});
	//右侧中部赋值
	$(".dropDonMenu").on('click','li',function(){
		$(".selectView span").html($(this).html());
		dropDownIdx=$(this).index();
		$(".dropDonMenu").hide();
	});
	//右侧中部左右切换
	$(".prevButton").click(function(){
		dropDownIdx--;
		if(dropDownIdx<0){
			dropDownIdx=0;
			return ;
		}
		console.log(dropDownIdx);
		$(".selectView span").html($(".dropDonMenu li").eq(dropDownIdx).html());
	});
	$(".nextButton").click(function(){
		dropDownIdx++;
		if(dropDownIdx>dropDonMenuLength-1){
			dropDownIdx=dropDonMenuLength-1;
			return ;
		}		
		console.log(dropDownIdx);
		$(".selectView span").html($(".dropDonMenu li").eq(dropDownIdx).html());
	});	

})