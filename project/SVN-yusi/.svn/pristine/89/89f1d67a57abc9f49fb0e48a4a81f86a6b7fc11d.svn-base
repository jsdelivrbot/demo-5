    //向左按钮点击事件
    var index = 0;
    var liLen=$(".container-top ul li").length;
    function clickLeft(){
 		index--;
        if(index <= 0){
        	index=0;
        	alert("这是第一页，不能再往点击了！");
            $(".container-top ul li").eq(index).addClass('active').siblings().removeClass('active');
        }else{
             $(".container-top ul li").eq(index).addClass('active').siblings().removeClass('active');
        }
    }


    //向右按钮点击事件
    function clickRight(){
    	index++;
 		if(index >=liLen){
 			alert("已经到达最后一页，不能再往点击了！");
            index = liLen-1;
        }else{
               $(".container-top ul li").eq(index).addClass('active').siblings().removeClass('active');
        }
    }



