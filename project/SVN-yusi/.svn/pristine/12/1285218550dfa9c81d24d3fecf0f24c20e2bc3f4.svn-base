//获取现在时间
function getNowDate(){
 	var d = new Date();
    var year = d.getFullYear();
    var mon=d.getMonth()+1;
    var day=d.getDate();
    var hours=d.getHours();
    var minutes=d.getMinutes();
    return s = year+"-"+(mon<10?('0'+mon):mon)+"-"+(day<10?('0'+day):day)+" "+(hours<10?('0'+hours):hours)+":"+(minutes<10?('0'+minutes):minutes);	
}

/**获取今天前24小时,7天,30天**/
function getBeforeDate(n){
    var n = n;
    var d = new Date();
    var year = d.getFullYear();
    var mon=d.getMonth()+1;
    var day=d.getDate();
    var hours=d.getHours();
    var minutes=d.getMinutes();

    if(day <= n){
	    if(mon>1) {
	     mon=mon-1;
	    }else {
	     year = year-1;
	     mon = 12;
	    }
    }
	d.setDate(d.getDate()-n);
	year = d.getFullYear();
	mon=d.getMonth()+1;
	day=d.getDate();
    return s = year+"-"+(mon<10?('0'+mon):mon)+"-"+(day<10?('0'+day):day)+" "+(hours<10?('0'+hours):hours)+":"+(minutes<10?('0'+minutes):minutes);	

}
console.log(getBeforeDate(1));//昨天的日期
console.log(getBeforeDate(7));//前七天的日期
