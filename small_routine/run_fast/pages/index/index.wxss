/* text类型字体 */
text{
  font-size: 24rpx;
  color: #999;
}
.clickBox{
  width: 520rpx;
}

.address{
  max-width: 525rpx;
}
.address>text{
  display: block;
}
.address>view{
  width: 100%;
}
/* 地址 */
.address>text:first-child{
  font-size: 28rpx;
  color: #333;
  /* 最多2行,超过加省略号; */
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
/* 联系人姓名 */
.contactPerson{
  font-size: 28rpx;
  vertical-align: middle;
  display: inline-block;
  width: 216rpx;
  overflow: hidden;
  text-overflow: clip;
  white-space: nowrap;
}
/* 联系人电话 */
.telephone{
  vertical-align: middle;
  display: inline-block;
  font-size: 28rpx;
  margin-left: 40rpx;
  max-width: 264rpx;
  overflow: hidden;
  text-overflow: clip;
  white-space: nowrap;
}