.container {
  background: #f5f5f4;
  font-size: 28rpx;
}

.inlineFlex {
  display: inline-flex;
  /* justify-content:space-between; */
  align-items: center;
}

.flexBox {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  background: #fff;
  width: 720rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  /* height:280rpx; */
  border-radius: 10rpx;
}

.title .top {
  padding: 20rpx;
  height: 150rpx;
}

.title .down {
  height: 110rpx;
  border-top: 1rpx solid #ddd;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 35rpx;
  padding-bottom: 20rpx;
}

.small_pic {
  width: 42rpx;
  height: 48rpx;
}

.user_pic {
  width: 130rpx;
  height: 130rpx;
  margin-right: 30rpx;
}

.info {
  background: #fff;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}

.info_1, .info_2 {
  border-bottom: 1rpx solid #ddd;
}

.info_1, .info_2, .info_3 {
  padding: 30rpx 30rpx 20rpx 10rpx;
}

.foot {
  background: #fff;
  padding-left: 20rpx;
}

.foot .foot_1, .foot .foot_2 {
  border-bottom: 1rpx solid #ddd;
}

.foot .foot_1, .foot .foot_2, .foot .foot_3 {
  height: 90rpx;
  padding-left: 10rpx;
  padding-right: 30rpx;
}

.mb20 {
  margin-bottom: 20rpx;
}

.mr20 {
  margin-right: 20rpx;
}

.person, .phone {
  color: #85827d;
}

.title_right_1 {
  margin-bottom: 25rpx;
}

.title_right {
  width: 430rpx;
}

.orderStatus {
  color: #ff7540;
}

.extra_info {
  color: #656460;
}

.foot_item_left {
  color: #c0bbb5;
}

.tips {
  color: #ff6932;
}

.payMoney {
  margin-bottom: 30rpx;
}

.payButton {
  width: 200rpx;
  height: 60rpx;
  border-radius: 40rpx;
  color: #fff;
  background: #ff6932;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

textarea {
  width: 575rpx;
  height: 100rpx;
}

.cancelOrderBox {
  margin-top: 100rpx;
  margin-bottom: 70rpx;
}

.swiper-tab {
  width: 100%;
  margin-top: 18rpx;
  border-bottom: 1rpx solid #ddd;
  text-align: center;
  line-height: 88rpx;
  background: #fff;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 33%;
  color: #777;
}

.swiper-tab-list1 {
  border-right: 1rpx solid #ddd;
}

.on {
  color: #ff6932;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.codeBox {
  margin-top: 40rpx;
  margin-bottom: 138rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.code_pic {
  width: 250rpx;
  height: 250rpx;
}

.process {
  width: 620rpx;
  height:100rpx;
  border-right: 1rpx solid #ddd;
  position: relative;
}
progress{
  width:476rpx;
  margin:0 auto;
  margin-top:30rpx;
}
.start_address{
  flex-direction:column;
  position: absolute;
  top:22rpx;
  left:-4rpx;
 
}
.end_address{
  flex-direction:column;
  position: absolute;
  top:22rpx;
  right:-5rpx;
  
}
.point{
  width:26rpx;
  height:26rpx;
  border-radius: 50%;
  background:#ff6932;
}

.orderProcess {
  width: 130rpx;
  padding: 20rpx;
}

.item2_title {
  height: 96rpx;
  width: 100%;
  border-bottom: 1rpx solid #ddd;
  background: #fff;
}

.timeLineBox {
  height: 600rpx;
  background: #fff;
}

.timeline {
  width: 100%;
  height: 100%;
  padding-top:146rpx;
}

.content, .date, .cirecle {
  position: absolute;
  margin-top: 10rpx;
}

.content {
 
  left:20rpx;
}

.date {
  top: 0;
  left: -190rpx;
  line-height: 20px;
}

.cirecle {
  top: 0;
  left:-15rpx;
  width: 10rpx;
  height: 10rpx;
  background: #48b379;
  border: 5px solid #eee9dc;
  border-radius: 50%;
  display: flex;
}

.timeLine_item{
  position:relative;
  height:110rpx;
  margin-left:200rpx;
  border-left:1rpx solid #ddd;
}

