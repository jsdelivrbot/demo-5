.container {
  background: #f5f5f4;
  font-size: 28rpx;
}

.inlineFlex {
  display: inline-flex;
  /* justify-content:space-between; */
  align-items: center;
}

.flexBox {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  background: #fff;
  width: 720rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  /* height:280rpx; */
  border-radius: 10rpx;
}

.title .top {
  padding: 20rpx;
  height: 150rpx;
}

.title .down {
  height: 110rpx;
  border-top: 1rpx solid #ddd;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top:35rpx;
  padding-bottom:20rpx;
}

.small_pic {
  width: 42rpx;
  height: 48rpx;
}

.user_pic {
  width: 130rpx;
  height: 130rpx;
  margin-right: 30rpx;
}

.info {
  background: #fff;
  margin: 20rpx 0;
  padding-left: 20rpx;
}

.info_1, .info_2 {
  border-bottom: 1rpx solid #ddd;
}

.info_1, .info_2, .info_3 {
  padding: 30rpx 30rpx 20rpx 10rpx;
}

.foot {
  background: #fff;
  margin-bottom: 180rpx;
  padding-left: 20rpx;
}

.foot .foot_1, .foot .foot_2 {
  border-bottom: 1rpx solid #ddd;
}

.foot .foot_1, .foot .foot_2, .foot .foot_3 {
  height: 90rpx;
  padding-left: 10rpx;
  padding-right: 30rpx;
}

.mb20 {
  margin-bottom: 20rpx;
}

.mr20 {
